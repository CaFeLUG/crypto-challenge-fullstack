<div class="panel panel-default">
  <div class="panel-heading">
    <h4><%= t('.forgot_your_password') %></h4>
  </div>
  <div class="panel-body">
    <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name), layout: :vertical, label_col: "col-sm-2", control_col: "col-sm-10") do |f| %>
      <%= f.email_field :email, autofocus: true  %>
      <%= f.submit t('.send_me_reset_password_instructions'), class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>

<%= render "devise/shared/links" %>
